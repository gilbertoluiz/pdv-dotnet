<Window x:Class="PdvSuite.UI.Wpf.Views.TelaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Autenticação" Height="380" Width="420" WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <StackPanel>
      <TextBlock Text="Entrar" FontSize="20" FontWeight="SemiBold" />
      <TextBox x:Name="TxtUsuario" materialDesign:HintAssist.Hint="Usuário"/>
      <PasswordBox x:Name="TxtSenha"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <ToggleButton x:Name="ToggleTema" Content="Escuro" Width="80"
                      Checked="ToggleTema_Checked" Unchecked="ToggleTema_Unchecked"/>
      </StackPanel>
      <Button Content="Entrar" Margin="0,16,0,0" Click="Entrar_Click"/>
    </StackPanel>
  </Grid>
</Window>